# Production Environment for Railway
FLASK_ENV=production
FLASK_DEBUG=False

# Database will be set by Railway environment variables
# These are referenced from your Railway project settings

# Keep JWT secret as is (should be changed to a strong random value)
JWT_SECRET_KEY=barron-pms-secret-key-2024-change-in-production

# Twilio Configuration - Set these in Railway dashboard
# TWILIO_ACCOUNT_SID=your_account_sid_here
# TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_FROM_PHONE=+14155238886
# TWILIO_WEBHOOK_URL will be set by Railway environment

# WhatsApp (optional - update with your values in Railway dashboard)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
# WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
# WHATSAPP_ACCESS_TOKEN=your_access_token_here
# WHATSAPP_VERIFY_TOKEN=your_verify_token_here
# WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here

# Rate limiting
RATE_LIMIT_PER_MINUTE=100

